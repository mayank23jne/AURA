# AURA Agentic Platform - Environment Configuration

# Environment
ENVIRONMENT=development
DEBUG=true

# LLM Provider Settings
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Database Settings
# MySQL is the primary relational database
MYSQL_URL=mysql+mysqlconnector://aura:aura@localhost:3306/aura
# Redis for optional caching
REDIS_URL=redis://localhost:6379
# ChromaDB for vector storage (knowledge base)
VECTOR_DB_TYPE=chroma
CHROMA_PERSIST_DIR=./data/chroma

# Message Bus Settings
MESSAGE_BUS_TYPE=memory
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=aura-agents

# Agent Settings
AGENT_RATE_LIMIT_RPM=60
AGENT_RATE_LIMIT_TPM=100000
AGENT_RETRY_ATTEMPTS=3
AGENT_TIMEOUT_SECONDS=60
AGENT_MEMORY_TYPE=conversation_summary

# Audit Settings
AUDIT_DEFAULT_TEST_COUNT=100
AUDIT_PARALLEL_EXECUTION=true
AUDIT_BATCH_SIZE=10
AUDIT_EARLY_STOPPING=true
AUDIT_CONFIDENCE_THRESHOLD=0.95

# Monitoring Settings
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8000
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_RELOAD=true
CORS_ORIGINS=["http://localhost:3000"]
